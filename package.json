{
  "name": "svelte-ts",
  "version": "1.0.0",
  "main": "src/index.ts",
  "devDependencies": {
    "@pyoner/svelte-ts-preprocess": "^1.2.1",
    "@types/chai": "^4.2.11",
    "@types/chart.js": "^2.9.16",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.9.1",
    "@wessberg/rollup-plugin-ts": "^1.2.13",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bulma": "^0.8.2",
    "chai": "^4.2.0",
    "chart.js": "^2.9.3",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rollup": "^1.12.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.8.1",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.2.0",
    "sass": "^1.26.3",
    "svelte": "^3.12.1",
    "svelte-router-spa": "^5.4.4",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "electron": "8.0.2"
  },
  "dependencies": {
    "concurrently": "^5.2.0",
    "electron-reload": "^1.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "sirv-cli": "^0.4.4"
  },
  "scripts": {
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public",
    "start:dev": "sirv public --dev -s -p 3000",
    "start:electron": "concurrently \"npm:autobuild\" \"electron-forge start\"",
    "test": "rollup -c && env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register tests/**/*.test.ts",
    "coverage": "nyc -r text -e .ts -x \"tests/*.test.ts\" npm run test"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "crawler"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
